<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBG"
    tools:context=".inputMakananActivity">
    <ImageView
        android:id="@+id/inputFoto"
        android:layout_width="match_parent"
        android:layout_height="75dp" />

    <Button
        android:id="@+id/tambahFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambil Foto"
        android:fontFamily="@font/grotesque"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Nama Makanan :"
        android:textSize="20dp"
        android:fontFamily="@font/grotesque"
        android:textColor="@color/FontColor"/>
    <EditText
        android:id="@+id/namaMakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contoh: Gurame Asam Manis"
        android:textSize="25dp"
        android:fontFamily="@font/grotesque"
        android:textColor="@color/FontColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Harga :"
        android:textSize="20dp"
        android:fontFamily="@font/grotesque"
        android:textColor="@color/FontColor"/>
    <EditText
        android:id="@+id/harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="contoh: 50000"
        android:textSize="25dp"
        android:fontFamily="@font/grotesque"
        android:textColor="@color/FontColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Jumlah :"
        android:textSize="20dp"
        android:fontFamily="@font/grotesque"
        android:textColor="@color/FontColor"/>/>
    <EditText
        android:id="@+id/jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contoh : 2"
        android:textSize="25dp"
        android:inputType="number"
        android:fontFamily="@font/grotesque"
        android:textColor="@color/FontColor"/>/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Keterangan :"
        android:textSize="20dp"
        android:fontFamily="@font/grotesque"
        android:textColor="@color/FontColor"
        />/>
    <EditText
        android:id="@+id/keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contoh: ikan dimasak saus tomat dan kopi"
        android:textSize="25dp"
        android:fontFamily="@font/grotesque"
        android:textColor="@color/FontColor"/>/>

    <Button
        android:id="@+id/submitMakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:fontFamily="@font/grotesque" />/>

</LinearLayout>